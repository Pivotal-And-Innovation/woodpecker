        <spring-data-commons.version>1.9.1.RELEASE</spring-data-commons.version>
        <guava.version>18.0</guava.version>
        <commons-lang3.version>3.4</commons-lang3.version>
        <commons-io.version>1.3.2</commons-io.version>
        <commons-lang.version>2.6</commons-lang.version>
        <commons-net.version>3.5</commons-net.version>
        <commons-cli.version>1.3.1</commons-cli.version>
        <commons-fileupload.version>1.3.2</commons-fileupload.version>
        <dubbo.version>2.5.3</dubbo.version>
        <zookeeper.version>3.5.2-alpha</zookeeper.version>
        <zkclient.version>0.1</zkclient.version>
        <c3p0.version>0.9.1.1</c3p0.version>
        <orientdb.version>2.2.8</orientdb.version>
        <fastjson.version>1.1.15</fastjson.version>
        <rocketmq-client.version>3.2.5</rocketmq-client.version>
        <poi.version>3.13</poi.version>
        <mybatis.version>3.2.5</mybatis.version>
        <mybatis-spring.version>1.2.3</mybatis-spring.version>
        <pagehelper.version>4.1.6</pagehelper.version>
        <netty-all.version>4.0.27.Final</netty-all.version>
        <commons-httpclient.version>3.1</commons-httpclient.version>
        <shiro-core.version>1.2.6</shiro-core.version>
        <quartz.version>2.2.3</quartz.version>
        <thymeleaf-spring4.version>2.1.4.RELEASE</thymeleaf-spring4.version>
    </properties>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.springframework</groupId>
                <artifactId>spring-core</artifactId>
                <version>${spring.version}</version>
